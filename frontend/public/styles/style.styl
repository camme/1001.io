@import 'mixins.styl'


backgroundColor = #fefefe
logoPartWidth = 43px
smallLogoPartWidth = 15px
actionColor = #5b97b6

topColor = #aaa

mainFont()
    font-family 'Raleway', sans-serif
    color #555

html
    min-height 100%
    position relative

body
    background-color lighten(backgroundColor, 90%)
    height 100%
    min-height 100%
    margin 0
    padding 0
    mainFont()

a
    color #333
    text-decoration none
    &:hover
        text-decoration underline

.container
    -webkit-animation appear .5s
    padding-top 120px

nav
    position fixed
    z-index 100
    box-shadow: 0 0px 40px rgba(0,0,0,.4);
    background-color rgba(250, 250, 250, .8)
    width 100%:
    margin 0 auto
    background-color #eee
    box-sizing border-box

    .about-link
        display none

    .nav-title
        font-size .7em
        color #999

    ul
        width 100%
        box-sizing border-box
        display flex
        padding 0
        margin 0
        list-style none
        justify-content center

        li
            padding 0 2em
            line-height 120px

        li.active a
            font-weight 700
        a
            display block
            font-size 1.5em
            float left
            font-weight 700
            color actionColor
            text-transform lowercase

        .count
            background-color lighten(actionColor, 70%)
            border-radius 150px
            font-size .4em
            margin-top 5px
            height 20px
            width 20px
            box-sizing border-box
            padding-top 4px
            font-family arial
            text-align center
            margin-left 10px
            display block
            float left

    .logo
        //width 4*logoPartWidth
        float left
        position absolute
        top 24px
        left 24px
        svg
            float left
        .tagline
            float left
            padding 1em
            color #bbb
            width 200px



.separator
    box-shadow 0px 5px 0px darken(backgroundColor, 4%)
    border-bottom solid 5px darken(backgroundColor, 7%)
    padding-top 15%
    padding-bottom 15%
    height 5px;
    width 100%


 

.other-info
    border-left 50px solid darken(backgroundColor, 10%)
    border-right 50px solid darken(backgroundColor, 15%)
    border-top 50px solid darken(backgroundColor, 20%)
    border-bottom 50px solid darken(backgroundColor, 5%)
    background-color darken(backgroundColor, 2%)
    float left
    font-size 1.5em
    font-family 'Raleway', sans-serif
    font-weight 100
    padding 4%
    position relative
    box-sizing border-box

    .talk
        font-size 1.4em
        width 100%
        box-sizing border-box

        .interesting
            font-weight 700

    .about-title
        font-weight 700
        width 100%
        text-align center
        font-size 2em
        margin 0px 0 .5em


    .about
        float left
        width 70%
        margin-left 5%
        position relative

        h1
            font-size 1em

        .name 
            text-align right

        .about-text
            float left
            font-weight 200
            font-size .8em
            color #999
            //margin-bottom 5%

    .version
        bottom 1em
        font-size .8em
        right 1em
        color #ccc
        position absolute

    .about-image
        width 25%
        float left
        background-image url('/media/images/camilo.jpg')
        background-repeat no-repeat
        background-size cover
        background-position -8px -8px
        border 8px solid rgba(200, 200, 200, .3)
        box-sizing border-box
        padding 8px
        border-radius 2000px

    .social
        float left
        margin-top 2%
        a
            padding-left 1px
            transition all ease-out .3s
            border-radius 20px
            text-shadow 0px 0px 8px #666
            box-sizing border-box
            margin-right 5px
            font-size .8em
            line-height 42px
            text-align center
            //text-shadow 1px 1px 1px #fff
            height 40px
            width 40px
            box-sizing border-box
            text-decoration none
            display block
            float left
            background-color #888
            color #eee

            &:hover
                background-color actionColor
                color #fff

.main-list .article-holder
    cursor pointer

.main-list
.single
    flex 1
    margin 0
    order 2
    //margin-top 5.05%
    //margin-bottom 5.05%
    border-left 50px solid darken(backgroundColor, 10%)
    border-right 50px solid darken(backgroundColor, 15%)
    border-top 50px solid darken(backgroundColor, 20%)
    border-bottom 50px solid darken(backgroundColor, 5%)
    background-color darken(backgroundColor, 2%)
    //max-width 1200px
    margin 0 auto
    padding 5%
    box-sizing border-box
    //display-box()
    //box-orient horizontal
    font-size 1.5em
    //column-count 2
    //column-gap .5em

    h1
        line-height 1.2em
        font-size 2.5em
        margin-top 0
        margin-bottom 0.3em
        clear left

    article
        //border-left 5px solid darken(backgroundColor, 20%)
        //border-top 5px solid darken(backgroundColor, 20%)
        //border-bottom 5px solid darken(backgroundColor, 20%)
        //border-right 10px solid darken(backgroundColor, 8%)
        //transform rotateY( 0deg )
        box-sizing border-box
        overflow hidden
        margin-bottom 10%
        width 100%
        position relative
        //height 500px
        //transition all .2s ease-in-out
        background-color darken(backgroundColor, 2%)
        line-height 1.3em

        pre code
            font-size .8em
            border-left 15px solid darken(backgroundColor, 15%)
            border-right 15px solid darken(backgroundColor, 20%)
            border-top 15px solid darken(backgroundColor, 35%)
            border-bottom 15px solid darken(backgroundColor, 10%)
            box-sizing border-box
            padding 20px

        a
            color darken(actionColor, 20%)

        img
            width 641px
            //height 400px
            //position absolute

        &:nth-child(2n + 1)
            clear left

        .intro
            //background-color lighten(backgroundColor, 4%)
            background-color darken(backgroundColor, 2%)
            font-size .8em
            color #666
            padding 20px 30px 20px 40px
            font-family 'Raleway', sans-serif
            font-weight 200
            margin-top -20px
            margin-left -40px
            position relative
            //transition all .3s ease-in-out
            z-index 99
            float left
            clear left
            p
                margin 0
            p+p
                margin-top 20px

        img
            width 100%

        .date
            font-family 'Raleway', sans-serif
            margin-bottom 0
            right 0
            font-size .7em
            color #999
            font-weight 700
            float right

        h2
            color #333
            text-decoration none
            z-index 100
            font-family 'Raleway', sans-serif
            font-weight 400
            margin-bottom 0
            margin-left -40px
            position relative
            background-color darken(backgroundColor, 2%)
            padding 0px 30px 10px 40px
            //transition all .4s ease-in-out
            line-height 1.2em
            float left
            clear left
            margin-top 0
            a
                text-decoration none
                color #333



        &.has-image h2
            margin-top 300px
            padding-top 20px


        .tags
            //transform-style preserve-3d
            //transform rotateY( 5deg ) scale(.9) translateX(-60px)
            box-sizing border-box
            z-index 1
            font-family 'Raleway', sans-serif
            font-size .7em
            font-weight 100
            transition all .2s ease-out
            float left
            padding-bottom 7% 
            padding-left 2px
            color #999
            width 70%
            .tag:after
                content: ","
                padding-right 3px
            .tag:last-child:after
                content: ""
            .tag-title
                font-weight 700
            a
                color #999
        .data
            float right

    .article-holder:hover
        padding-left 0
/*
        article
            border-width 30px
            transform scale(.9)
            transform rotateY( 5deg ) scale(.9) translateX(-60px)
            h2
                left 190px
            .intro
                left 160px
            .date
                top 0*/

.aspect-ration
    margin-bottom 100%

.main-list
    flex-wrap wrap
    display flex
    h1
        margin-bottom 5%
    h2
        margin-top 0
        float left
        padding-bottom 0
        margin-bottom .4em
    .date
        position absolute
        bottom -31px
        right 15px
        font-size .7em
    .intro
        clear left
        //border-bottom 2px dashed actionColor
    .article-holder
        margin-bottom 5%
        position relative
        background-color white
        box-shadow 8px 8px 0 darken(backgroundColor, 7%)
        float left
        circleWidth = 110px
        .tag-circle-border
            position absolute
            left 50%
            margin-left -(circleWidth / 2 + 8px)
            margin-top -(circleWidth / 2 + 8px)
            border 8px solid rgba(200, 200, 200, .3)
            border-radius circleWidth
            top 100%
            width circleWidth
            height circleWidth
            z-index 5
        .tag-circle
            background-color white
            border-radius circleWidth
            width circleWidth
            height circleWidth
            text-align center
            font-size .58em
            display flex
            flex-direction column
            justify-content center
        .container-image
            float left
            width 100%
            background-size cover
            position relative
            position 1
            background-color #eee
            background-repeat no-repeat
            .aspect-ration
                margin-bottom 50%
        .container-content
            width 100%
            z-index 10
            position relative
            box-sizing border-box
            padding 3.0em 1.5em 1.5em
            float left

        article
            box-shadow 0px 8px 0px darken(backgroundColor, 9%)
            border-bottom solid 8px darken(backgroundColor, 12%)
            padding-bottom 0%
            margin-bottom 15%
            background-position center
            background-size cover
            background-repeat no-repeat
            h2
                padding-bottom 7%

        article .excerpt
            font-size 1.0em

    .blog-list
        display flex
        flex-flow row wrap
        justify-content space-between
        .article-holder
            width 47%
            .intro
                font-size .85em


        &.archive .article-holder
            width 30%
            font-size .9em
            .date
                font-size .6em




    .more
        text-align center
        width 100%
        padding .3em .4em
        transition background-color 1s ease-out, color .5s ease-out
        &:hover
            background-color rgba(100, 100, 100, .2)
            color actionColor
            text-decoration none

    .project-list
        box-shadow 0px -8px 0px #ddd
        border-top solid 8px darken(backgroundColor, 5%)
        padding-top 5%
        margin-top 5%
        display flex
        flex-flow row wrap
        justify-content space-between
        .article-holder
            width 30%
        h1
            text-align center
            width 100%
            text-transform lowercase
        .project
            padding 0
            box-sizing border-box
            h2
                padding 7% 10% 0
            .intro
                font-size .85em
                padding 0 10% 10%
            projectListImageWidth = 100%
            .container-image
                width projectListImageWidth
                left 0
                top 0
                box-sizing border-box
                background-size cover
                background-position center
                .aspect-ration
                    margin-bottom 50%

.single
    font-size 1.2em
    article
        max-width 900px
        margin 0 auto
        img
            width 100%
            border 8px solid  rgba(200, 200, 200, .3)
            margin 1em 0
            box-sizing border-box
            
        .intro
            font-size 1.5em
            line-height 1.3em
            font-weight 400
            margin-top 10px
            background-color transparent
        h2
            margin-left 0
            padding 40px 0 10px
            margin-top 0
            font-weight 700
        p
            clear left
        li
            padding-bottom 10px

        ul
            clear left

@media only screen and (max-width: 1000px) 
    .other-info
        .nav ul
            .count
                display none
        .about
            font-size .9em
        .logo-top
            .logo-text
                display none


    .main-list
        flex-wrap wrap
        display flex
        .article-holder
            flex-basis 47%
            padding-right 6%
            &:nth-child(2n + 2)
                padding-right 0%

    .single .article-holder
        .date
            float left
            font-size 1em
        .tags
            padding-left 0
            width 100%




@media only screen and (max-width: 900px) 
    .container
        flex-direction column
    .main-list, .single
        width 90%
        margin 0 5%
        margin-top 115px
        padding 0
        border 0
        article .intro, article h2
            background-color transparent
        article
            font-size .8em
        background-color transparent

    .single .article-holder
        .date
            float left
            font-size 1em
        .tags
            padding-left 0

        pre
            border-left-width 10px
            border-top-width 10px
            border-right-width 10px
            border-bottom-width 10px


    .main-list
        .article-holder:nth-child(n)
            article 
                background-color #fff
                margin-bottom 10%
                .intro, h2
                    background-color #fff
            flex-basis 100%
            padding-right 0

    .other-info
        width 100%
        z-index 1000
        background-color backgroundColor
        //position fixed
        display flex
        padding 0
        &.about-on
            .about
                display block
        .about
            display none
            transition height .5s ease-out;
            padding-top 0
            position absolute
            top 90px
            left 0
            width 94%
            margin 3%
            border-radius 10px
            border 4px solid darken(backgroundColor, 7)
            padding 10%
            box-sizing border-box
            background-color white
            z-index 100
        .nav
            background-color transparent
            width auto
            padding 10px 0px 10px 10px
            top 0
            right 20px
            position fixed
            z-index 1000
            box-shadow none
            border 0
            .nav-title
                display none
            .extra-nav
                li
                    display block
                    float right
                    margin-top 30px
                    line-height .1em
             ul
                li
                    display none
                    float left
                    a
                        font-size .8em

        .logo-top
            box-shadow 0px 10px 0px darken(backgroundColor, 4%)
            border-bottom solid 10px darken(backgroundColor, 7%)
            position fixed 
            width 100%
            box-sizing border-box
            background-color darken(backgroundColor, 10%)
            z-index 1000
            border 0
            padding  20px 5%
            flex 1

            .logo
                width 100px
                .logo-1, .logo-4
                    height 3*smallLogoPartWidth
                    border-left-width smallLogoPartWidth
                .logo-2, .logo-3
                    height 3*smallLogoPartWidth
                    width 3*smallLogoPartWidth
                    border-width smallLogoPartWidth
            .logo-text
                display none
                width 65%
                font-size 16px
                padding-top 2px
                padding-left 3%
                clear none
                        



@-webkit-keyframes appear
    from 
        opacity: 0.0001
    to 
        opaicty: 1

@-webkit-keyframes logo
    0%
        fill red
    20%
        fill yellow


