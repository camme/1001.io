@import 'mixins.styl'


backgroundColor = #fefefe
logoPartWidth = 43px
smallLogoPartWidth = 15px
actionColor = #f1008e

topColor = #aaa

mainFont()
    font-family 'Raleway', sans-serif
    color #555

html
    min-height 100%
    position relative

body
    background-color lighten(backgroundColor, 90%)
    height 100%
    min-height 100%
    margin 0
    padding 0
    mainFont()

a
    color #333
    text-decoration none
    &:hover
        text-decoration underline

.container
    -webkit-animation appear .5s

nav
    width 100%
    position relative
    max-width 1200px
    margin 0 auto
    box-sizing border-box

    .about-link
        display none

    .nav-title
        font-size .7em
        color #999

    ul
        width 100%
        box-sizing border-box
        display flex
        padding 0
        margin 0
        list-style none
        justify-content center

        li
            padding 0 3em
            line-height 120px
            //border-right 1px solid lighten(topColor, 20%)

            //li:first-child
            //border-left 1px solid lighten(topColor, 20%)

        li.active a
            font-weight 700
        a
            display block
            font-size 1.5em
            float left
            text-transform lowercase

        .count
            background-color lighten(actionColor, 70%)
            border-radius 150px
            font-size .4em
            margin-top 5px
            height 20px
            width 20px
            box-sizing border-box
            padding-top 4px
            font-family arial
            text-align center
            margin-left 10px
            display block
            float left

    .logo
        //width 4*logoPartWidth
        float left
        position absolute
        top 24px


.separator
    box-shadow 0px 5px 0px darken(backgroundColor, 4%)
    border-bottom solid 5px darken(backgroundColor, 7%)
    padding-top 15%
    padding-bottom 15%
    height 5px;
    width 100%


.blog-list
    box-shadow 0px 5px 0px #fff
    //darken(backgroundColor, 5%)
    border-bottom solid 5px darken(backgroundColor, 15%)
    padding-bottom 5%
    margin-bottom 5%

 

.other-info
    border-left 50px solid darken(backgroundColor, 10%)
    border-right 50px solid darken(backgroundColor, 15%)
    border-top 50px solid darken(backgroundColor, 20%)
    border-bottom 50px solid darken(backgroundColor, 5%)
    background-color darken(backgroundColor, 2%)
    font-size 1.5em
    font-family 'Raleway', sans-serif
    font-weight 100
    padding 4%
    max-width 1200px
    margin 3em auto
    margin-top 1em
    box-sizing border-box

    .talk
        font-size 1.4em
        width 100%
        box-sizing border-box

        .interesting
            font-weight 700

    .about

        h1
            font-size 1em

        .name 
            text-align right

        .about-title
            font-weight 700
            margin 0px 0 10px

        .about-text
            font-weight 200
            font-size .8em
            color #999
            //margin-bottom 5%

    .social
        margin-top 5%
        margin-bottom 5%
        a
            padding-left 1px
            transition all ease-out .3s
            border-radius 20px
            text-shadow 0px 0px 8px #666
            box-sizing border-box
            margin-right 5px
            font-size .8em
            line-height 42px
            text-align center
            //text-shadow 1px 1px 1px #fff
            height 40px
            width 40px
            box-sizing border-box
            text-decoration none
            display block
            float left
            background-color #888
            color #eee

            &:hover
                background-color actionColor
                color #fff

.main-list .article-holder
    cursor pointer

.main-list
.single
    flex 1
    margin 0
    order 2
    //margin-top 5.05%
    //margin-bottom 5.05%
    border-left 50px solid darken(backgroundColor, 10%)
    border-right 50px solid darken(backgroundColor, 15%)
    border-top 50px solid darken(backgroundColor, 20%)
    border-bottom 50px solid darken(backgroundColor, 5%)
    background-color darken(backgroundColor, 2%)
    max-width 1200px
    margin 0 auto
    padding 5%
    box-sizing border-box
    //display-box()
    //box-orient horizontal
    font-size 1.5em
    //column-count 2
    //column-gap .5em

    h1
        line-height 1.2em
        font-size 2.5em
        margin-top 0
        margin-bottom 0.3em
        clear left

    article
        //border-left 5px solid darken(backgroundColor, 20%)
        //border-top 5px solid darken(backgroundColor, 20%)
        //border-bottom 5px solid darken(backgroundColor, 20%)
        //border-right 10px solid darken(backgroundColor, 8%)
        //transform rotateY( 0deg )
        box-sizing border-box
        overflow hidden
        margin-bottom 10%
        width 100%
        position relative
        //height 500px
        //transition all .2s ease-in-out
        background-color darken(backgroundColor, 2%)
        line-height 1.3em

        pre code
            font-size .8em
            border-left 15px solid darken(backgroundColor, 15%)
            border-right 15px solid darken(backgroundColor, 20%)
            border-top 15px solid darken(backgroundColor, 35%)
            border-bottom 15px solid darken(backgroundColor, 10%)
            box-sizing border-box
            padding 20px

        a
            color darken(actionColor, 20%)

        img
            width 641px
            //height 400px
            //position absolute

        &:nth-child(2n + 1)
            clear left

        .intro
            //background-color lighten(backgroundColor, 4%)
            background-color darken(backgroundColor, 2%)
            font-size .8em
            color #666
            padding 20px 30px 20px 40px
            font-family 'Raleway', sans-serif
            font-weight 200
            margin-top -20px
            margin-left -40px
            position relative
            //transition all .3s ease-in-out
            z-index 99
            float left
            clear left
            p
                margin 0
            p+p
                margin-top 20px

        img
            width 100%

        .date
            font-family 'Raleway', sans-serif
            margin-bottom 0
            right 0
            font-size .7em
            color #999
            font-weight 700
            float right

        h2
            color #333
            text-decoration none
            z-index 100
            font-family 'Raleway', sans-serif
            font-weight 400
            margin-bottom 0
            margin-left -40px
            position relative
            background-color darken(backgroundColor, 2%)
            padding 0px 30px 10px 40px
            //transition all .4s ease-in-out
            line-height 1.2em
            float left
            clear left
            margin-top 0
            a
                text-decoration none
                color #333



        &.has-image h2
            margin-top 300px
            padding-top 20px


        .tags
            //transform-style preserve-3d
            //transform rotateY( 5deg ) scale(.9) translateX(-60px)
            box-sizing border-box
            z-index 1
            font-family 'Raleway', sans-serif
            font-size .7em
            font-weight 100
            transition all .2s ease-out
            float left
            padding-bottom 7% 
            padding-left 2px
            color #999
            width 70%
            .tag:after
                content: ","
                padding-right 3px
            .tag:last-child:after
                content: ""
            .tag-title
                font-weight 700
            a
                color #999
        .data
            float right

    .article-holder:hover
        padding-left 0
