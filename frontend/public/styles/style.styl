.aspect-ration
    margin-bottom 100%
    
.main-list
    flex-wrap wrap
    display flex
    h1
        margin-bottom 5%
    h2
        margin-top 0
        float left
        width 80%
        padding-bottom 0
        margin-bottom .4em
    .date
        float right
        background-color rgba(255, 255, 255, .8)
        font-size .9em
        margin-top 3px
        padding .2em .3em
    .intro
        clear left
    p
        //display inline
        background-color rgba(255, 255, 255, .4)
        //padding 0.3em .5em
        color #333
        //line-height 1.2em
        //&::first-line
        //padding-right 1em

    .article-holder
        margin-bottom 5%
        position relative
        overflow hidden
        height 287px
        background-color white
        box-shadow 8px 8px 0 darken(backgroundColor, 5%)
        float left
        .rect
            transform rotate(45deg)
            position absolute
            left 30%
            margin-left -30px
            bottom 0
            top 16px
            z-index 5
        .rect2
            bottom -40px
            top auto
        .container-image
            float left
            width 30%
            background-size cover
            position relative
            position 1
            background-repeat no-repeat
        .container-content
            width 70%
            z-index 10
            position relative
            box-sizing border-box
            padding 1.5em
            float left

        article
            box-shadow 0px 5px 0px darken(backgroundColor, 9%)
            border-bottom solid 5px darken(backgroundColor, 12%)
            padding-bottom 0%
            margin-bottom 15%
            background-position center
            background-size cover
            background-repeat no-repeat
            h2
                padding-bottom 7%

        article .excerpt
            font-size 1.0em

    .project-list
        .project
            float left
            width 47%
            &:nth-child(2n)
                padding-right 6%
                clear left

.single
    font-size 1.2em
    article
        .intro
            font-size 1.5em
            line-height 1.3em
            font-weight 400
            margin-top 10px
            background-color transparent
        h2
            margin-left 0
            padding 40px 0 10px
            margin-top 0
            font-weight 700
        p
            clear left
        li
            padding-bottom 10px

        ul
            clear left

@media only screen and (max-width: 1000px) 
    .other-info
        .nav ul
            .count
                display none
        .about
            font-size .9em
        .logo-top
            .logo-text
                display none


    .main-list
        flex-wrap wrap
        display flex
        .article-holder
            flex-basis 47%
            padding-right 6%
            &:nth-child(2n + 2)
                padding-right 0%

    .single .article-holder
        .date
            float left
            font-size 1em
        .tags
            padding-left 0
            width 100%




@media only screen and (max-width: 900px) 
    .container
        flex-direction column
    .main-list, .single
        width 90%
        margin 0 5%
        margin-top 115px
        padding 0
        border 0
        article .intro, article h2
            background-color transparent
        article
            font-size .8em
        background-color transparent

    .single .article-holder
        .date
            float left
            font-size 1em
        .tags
            padding-left 0

        pre
            border-left-width 10px
            border-top-width 10px
            border-right-width 10px
            border-bottom-width 10px


    .main-list
        .article-holder:nth-child(n)
            article 
                background-color #fff
                margin-bottom 10%
                .intro, h2
                    background-color #fff
            flex-basis 100%
            padding-right 0

    .other-info
        width 100%
        z-index 1000
        background-color backgroundColor
        //position fixed
        display flex
        padding 0
        &.about-on
            .about
                display block
        .about
            display none
            transition height .5s ease-out;
            padding-top 0
            position absolute
            top 90px
            left 0
            width 94%
            margin 3%
            border-radius 10px
            border 4px solid darken(backgroundColor, 7)
            padding 10%
            box-sizing border-box
            background-color white
            z-index 100
        .nav
            background-color transparent
            width auto
            padding 10px 0px 10px 10px
            top 0
            right 20px
            position fixed
            z-index 1000
            box-shadow none
            border 0
            .nav-title
                display none
            .extra-nav
                li
                    display block
                    float right
                    margin-top 30px
                    line-height .1em
             ul
                li
                    display none
                    float left
                    a
                        font-size .8em

        .logo-top
            box-shadow 0px 10px 0px darken(backgroundColor, 4%)
            border-bottom solid 10px darken(backgroundColor, 7%)
            position fixed 
            width 100%
            box-sizing border-box
            background-color darken(backgroundColor, 10%)
            z-index 1000
            border 0
            padding  20px 5%
            flex 1

            .logo
                width 100px
                .logo-1, .logo-4
                    height 3*smallLogoPartWidth
                    border-left-width smallLogoPartWidth
                .logo-2, .logo-3
                    height 3*smallLogoPartWidth
                    width 3*smallLogoPartWidth
                    border-width smallLogoPartWidth
            .logo-text
                display none
                width 65%
                font-size 16px
                padding-top 2px
                padding-left 3%
                clear none
                        



@-webkit-keyframes appear
    from 
        opacity: 0.0001
    to 
        opaicty: 1

@-webkit-keyframes logo
    0%
        fill red
    20%
        fill yellow


