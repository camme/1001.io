@import 'mixins.styl'

backgroundColor = #fefefe
actionColor = #5b97b6
topColor = #aaa

@media only screen and (min-width: 700px) 
    nav
        transition all .4s ease-out
        top 0
    body.slow-scroll
        nav
            top -120px
        #top
            top -120px
    #top
        transition all .4s ease-out
        z-index 1000
        top 0
        background-color transparent
        box-shadow none
        height 120px
        width 30%
        a
            top 0
        .burger
            display none
        .logo
            top 24px
            left 24px
            svg 
                width auto

    footer
        position relative
        border-left 50px solid darken(backgroundColor, 10%)
        border-right 50px solid darken(backgroundColor, 15%)
        border-top 50px solid darken(backgroundColor, 20%)
        border-bottom 50px solid darken(backgroundColor, 5%)
        background-color darken(backgroundColor, 2%)
        padding 4%
        .about-title
            font-weight 700
            width 100%
            text-align center
            font-size 2em
            margin 0px 0 .5em
        .about-image
            display block

        .about
            margin-left 5%
            padding-bottom 0
            width 70%

            .about-text
                font-size .8em
                padding-bottom 5%
                line-height 1.5em
                color #666
        .version
            bottom 1em
            font-size .8em

    .container
        padding-top 120px
    nav
        z-index 100
        background-color rgba(250, 250, 250, .8)
        padding-bottom 0
        ul
            padding-left 150px
            padding-right 35px
            display flex
            justify-content flex-end
            li
                line-height 120px
                border 0
                &:first-child
                    border 0
                &:last-child 
                    display block
            a
                color actionColor
                float left
                padding 0 .5em

         .tagline
            display block
            float left
            text-align left
            position absolute
            top 24px
            left 214px
            padding 1em
            font-size 1em
            color #aaa
            width 200px

    .main-list
        .blog-list
            .post
                width 100%
            &.archive .article-holder
                width 47%
         .project-list
            .project
                width 47%

    .main-list, .single
        border-left 50px solid darken(backgroundColor, 10%)
        border-right 50px solid darken(backgroundColor, 15%)
        border-top 50px solid darken(backgroundColor, 20%)
        border-bottom 50px solid darken(backgroundColor, 5%)

        h1
            font-size 2.5em


